@model List<Pregunta>
<h2 class="text-center text-primary">Listado de preguntas</h2>

<div class="text-end">
    <button type="button" class="btn btn-primary" id="btnAgregarPregunta" onclick="agregarPregunta()">Agregar pregunta</button>
</div>

<script>
    function agregarPregunta() {
        window.location.href = "@Url.Action("IngresarPregunta", "Preguntas")";
    }
</script>

@if (Model.Count > 0)
{
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Usuario</th>
                <th>Título</th>
                <th>Pregunta</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pregunta in Model)
            {
                <tr>
                    <td>@pregunta.NombreUsuario</td>
                    <td>@pregunta.TituloPregunta</td>
                    <td>@pregunta.ContenidoPregunta</td>
                    <td>@pregunta.FechaPregunta.ToString("dd/MM/yyyy")</td>
                    <td>@pregunta.estado</td>
                    <td>
                        @if (pregunta.estado == "true")
                        {
                            <a href="@Url.Action("IngresarPregunta", "Preguntas", new { id = pregunta.NombreUsuario })">Responder</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No hay preguntas para mostrar.</p>
}


